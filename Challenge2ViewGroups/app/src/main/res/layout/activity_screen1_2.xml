<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen1_2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/a"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#ffff00"></View>
        <View
            android:layout_width="70dp"
            android:id="@+id/b"
            android:layout_toRightOf="@id/a"
            android:layout_height="50dp">

        </View>
        <View
            android:layout_width="50dp"
            android:background="#afeeee"

            android:id="@+id/c"
            android:layout_toRightOf="@id/b"
            android:layout_height="50dp">
        </View>
        <View
            android:layout_width="50dp"
            android:background="#40e0d0"
            android:id="@+id/d"
            android:layout_toRightOf="@id/c"
            android:layout_height="50dp"></View>
        <View
            android:layout_width="30dp"
            android:id="@+id/e"
            android:layout_toRightOf="@id/d"
            android:layout_height="30dp">
        </View>
        <View
            android:layout_width="50dp"
            android:id="@+id/f"
            android:background="#fa8072	"
            android:layout_toRightOf="@id/e"
            android:layout_marginBottom="20dp"
            android:layout_height="50dp">
        </View>
        <TextView
            android:layout_below="@id/f"
            android:layout_width="wrap_content"
            android:text="@string/text"
            android:id="@+id/g"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_below="@id/g"
            android:layout_width="wrap_content"
            android:id="@+id/h"
            android:text="@string/text"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:layout_below="@id/h"
            android:layout_width="wrap_content"
            android:text="@string/text"
            android:id="@+id/i"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_below="@id/i"
            android:layout_width="wrap_content"
            android:text="@string/text"
            android:id="@+id/j"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_below="@id/j"
            android:layout_width="wrap_content"
            android:text="@string/text"
            android:id="@+id/k"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_below="@id/k"
            android:layout_width="wrap_content"
            android:text="@string/text"
            android:id="@+id/l"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">
        </TextView>
        <TextView
            android:layout_below="@id/l"
            android:layout_width="wrap_content"
            android:text="@string/text"
            android:id="@+id/m"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content">
        </TextView>
    </RelativeLayout>
</ScrollView>